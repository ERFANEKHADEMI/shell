#!/bin/bash

set -e

branch=$1

if [ -z "$branch" ]; then
    echo "Usage: $0 [branch]"
    exit 1
fi

curdir=$(dirname `readlink -f $0`)

mkdir -p /tmp/build-deps
pushd /tmp/build-deps
$curdir/build-cmake-shared $branch
$curdir/build-qtaccountsservice $branch
$curdir/build-qtgsettings $branch
$curdir/build-qtudev $branch
$curdir/build-fluid $branch
$curdir/build-libliri $branch
$curdir/build-eglfs $branch
$curdir/build-wayland $branch
popd
